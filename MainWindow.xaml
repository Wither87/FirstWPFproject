<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="560" KeyUp="Window_KeyUp" MinHeight="200" MinWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="label" Margin="5" FontSize="24"/>
        <Button x:Name="plusButton" Content="+" FontSize="20" Margin="5" Click="PlusButton_Click" Grid.Column="1"/>
        <Button x:Name="DeleteTextBoxButton" Content="Delete" FontSize ="20" Margin="5" Click="DeleteButton_Click" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1"/>

        <Grid Grid.Column="0" Margin="0,55,3.2,0.4" Grid.RowSpan="3">
            <StackPanel x:Name="StackPanelWithTextBoxes" Margin="5" Orientation="Vertical">

            </StackPanel>
        </Grid>

    </Grid>
</Window>
